<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.khagen_lab1.LoginController">
    <children>
        <Label text="Login Page" layoutX="130.0" layoutY="20.0" textAlignment="CENTER" style="-fx-font-size: 24;">
        </Label>
        <Label text="Username:" layoutX="50.0" layoutY="70.0"/>
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="70.0"/>
        <Label text="Password:" layoutX="50.0" layoutY="110.0"/>
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="110.0"/>
        <Button text="Login" layoutX="150.0" layoutY="150.0" onAction="#handleLogin"/>
        <Label fx:id="messageLabel" layoutX="50.0" layoutY="190.0" textFill="red"/>
    </children>
</AnchorPane>